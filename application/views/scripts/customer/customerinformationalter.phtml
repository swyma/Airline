$(document).ready(function(){
	
	//重置操作
	$("#cz").click(
			function(){
				alert ("你可以重新填写了");
				
			}
			);
	
	
	$('form :input').blur(function(){
		var $parent = $(this).parent();
		$parent.find(".formtips").remove();
		
		//验证密码
		if($(this).is('#cus_pwd')){
			if(this.value == "" || this.value.length< 6){
				var errorMsg ="<font color=red>*密码最短不能小于6位<font>";
				$parent.append('<span class = "formtips onError">' + errorMsg+ '</span>');}
			else { var okMsg = "<font color=green>输入符合格式<font>";
			$parent.append('<span class="formtips onSuccess">' +okMsg +'</span>');}
			
			
		}
		//验证确认密码
		if($(this).is('#cus_pwd2')){
			if($(this).val()  == $("#cus_pwd").val() &&  this.value !=  "" && this.value.length > 5){
				var errorMsg ="<font color=green>下一步<font>";
				$parent.append('<span class = "formtips onError">' + errorMsg+ '</span>');}
			else { var okMsg = "<font color=red>*请确认两次输入一致且不为空<font>";
			$parent.append('<span class="formtips onSuccess">' +okMsg +'</span>');}
			
		}
		//验证身份证
		if($(this).is('#cus_id')){
			if(this.value == "" || this.value.length<18){
				var errorMsg ="<font color=red>*请输入正确的18位身份证号码<font>";
				$parent.append('<span class = "formtips onError">' + errorMsg+ '</span>');}
			else { var okMsg = "<font color=green>输入正确<font>";
			$parent.append('<span class="formtips onSuccess">' +okMsg +'</span>');}
			
		}
		//验证邮箱
		if($(this).is('#cus_email')){
			if(this.value == "" || (this.value !=  "" && !/.+@.+\.[a-zA-Z]{2,4}$/.test(this.value))){
				 var errorMsg ="<font color=red>*请输入正确的email地址<font>";
				$parent.append('<span class = "formtips onError">' + errorMsg+ '</span>');}
			else { var okMsg = "<font color=green>输入正确<font>"; 
			$parent.append('<span class="formtips onSuccess">' +okMsg +'</span>');}
			
			}
		//验证电话号
		if($(this).is('#cus_telnumber')){
			
			if(this.value == "" || this.value.length <  11 || ! (/^1[358]\d{9}$/.test(this.value)) ) {
				var errorMsg ="<font color=red>*请输入正确的11位电话号码<font>";
				$parent.append('<span class = "formtips onError">' + errorMsg+ '</span>');}
			else { var okMsg = "<font color=green>输入正确<font>";
			$parent.append('<span class="formtips onSuccess">' +okMsg +'</span>');}
			
			
			}
}  ) ;

